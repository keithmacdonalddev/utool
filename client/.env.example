# =============================================================================
# REACT APPLICATION CONFIGURATION
# =============================================================================
# Backend API URL
# Used for making API calls from the frontend
# Format: http://hostname:port/api/v1
REACT_APP_API_URL=http://localhost:5000/api/v1

# WebSocket server URL for real-time communication
# Used for establishing Socket.IO connections
# Usually the same as your backend server without the API path
REACT_APP_SOCKET_URL=http://localhost:5000

# Application name displayed in various UI elements
REACT_APP_NAME=uTool

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Disable ESLint errors during development
# Set to true to convert ESLint errors to warnings during development
# Values: true, false
ESLINT_NO_DEV_ERRORS=true

# Control source map generation
# Set to false in production to reduce bundle size
# Values: true, false
GENERATE_SOURCEMAP=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable weather widget functionality
# Values: true, false
REACT_APP_FEATURE_WEATHER_ENABLED=true

# Enable/disable stock data functionality
# Values: true, false
REACT_APP_FEATURE_STOCKS_ENABLED=true
